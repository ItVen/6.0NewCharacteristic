<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">

            <Button
                android:id="@+id/button"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="?android:attr/selectableItemBackground"
                android:text="指定有界的波纹" />

            <Button
                android:id="@+id/button5"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="?android:attr/selectableItemBackgroundBorderless"
                android:text="越过视图边界的波纹" />

            <Button
                android:id="@+id/button6"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@drawable/ripple"
                android:text="自定义Ripple效果" />
            <Button
                android:id="@+id/show"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:onClick="Show"
                android:background="?android:attr/selectableItemBackground"/>

            <View
                android:id="@+id/view"
                android:layout_width="match_parent"
                android:layout_height="100dp"
                android:background="@color/colorAccent"/>
            <View
                android:layout_width="match_parent"
                android:layout_height="10dp"
                android:stateListAnimator="@animator/view_change_animation"
                android:background="@color/colorPrimaryDark"
                android:id="@+id/path_view" />
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:orientation="horizontal">
                <Button
                    android:onClick="Explode"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="分解"/>
                <Button
                    android:onClick="Slide"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="滑动"/>
                <Button
                    android:onClick="InOut"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="淡入淡出"/>

            </LinearLayout>
            <android.support.v7.widget.CardView
                android:id="@+id/share"
                android:onClick="Share"
                android:layout_width="wrap_content"
                android:layout_margin="10dp"
                android:elevation="12in"
                android:layout_height="wrap_content">
                <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:src="@mipmap/ic_launcher"/>
            </android.support.v7.widget.CardView>

            <Button
                android:text="Java的使用曲线运动"
                android:onClick="PathInterpolator"
                android:layout_width="match_parent"
                android:layout_height="wrap_content" />

            <!--按钮使用了视图状态改变动画-->
            <Button
                android:text="XML的使用曲线运动"
                android:onClick="XMLAnimation"
                android:layout_width="match_parent"
                android:stateListAnimator="@animator/view_change_animation"
                android:layout_height="wrap_content" />
            <ImageView xmlns:app="http://schemas.android.com/apk/res-auto"
                android:id="@+id/imageview"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                app:srcCompat="@drawable/animvectordrawable"/>
        </LinearLayout>

    </ScrollView>


</LinearLayout>
