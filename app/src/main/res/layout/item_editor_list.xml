<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              android:layout_width="match_parent"
              android:layout_height="wrap_content"
              android:orientation="vertical">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/white"
        android:padding="@dimen/activity_horizontal_margin">

        <com.lzx.zhihudaily.widget.CircleImageView
            android:id="@+id/editor_head_view"
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:layout_marginRight="@dimen/activity_horizontal_margin"
            android:src="@drawable/comment_avatar"/>

        <TextView
            android:id="@+id/editor_name_view"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_alignTop="@+id/editor_head_view"
            android:layout_toRightOf="@+id/editor_head_view"
            android:paddingTop="5dp"
            android:textColor="@android:color/black"
            android:textSize="@dimen/default_medium_text_size"/>

        <TextView
            android:id="@+id/editor_bio_view"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_alignBottom="@+id/editor_head_view"
            android:layout_below="@+id/editor_name_view"
            android:layout_toRightOf="@+id/editor_head_view"
            android:gravity="bottom"
            android:paddingBottom="5dp"
            android:textColor="@color/common_text_color"
            android:textSize="@dimen/default_small_text_size"/>
    </RelativeLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="1px"
        android:layout_marginLeft="@dimen/activity_horizontal_margin"
        android:layout_marginRight="@dimen/activity_horizontal_margin"
        android:background="#DFDFDF"/>
</LinearLayout>